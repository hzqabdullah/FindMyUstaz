<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="2">

    <android.support.v7.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="@drawable/layoutdashboard">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/newuser"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/cardview_dark_background"
                        android:text="Full name : "
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvfullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/cardview_dark_background"
                        android:text=""
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/newlocation"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Address : "
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="11dp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/newemail"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Email : "
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvemail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/newphone"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Contact : "
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvcontact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/newproduct"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Product: "
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />


                </LinearLayout>

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/quantity"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Quantity :"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/lvqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/cardview_dark_background"
                    android:text="0"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp" />


            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/newprice"/>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/cardview_dark_background"
                        android:text="Price :"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/cardview_dark_background"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:textSize="11dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/cart"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Ordered on : "
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/lvcreated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text=""
                        android:textColor="@color/cardview_dark_background"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="11dp" />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>